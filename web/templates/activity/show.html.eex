<h2>Show activity</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @activity.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @activity.description %>
  </li>

  <li>
    <strong>Active:</strong>
    <%= @activity.active %>
  </li>

</ul>

<%= link "Edit", to: activity_path(@conn, :edit, @activity) %>
<%= link "Back", to: activity_path(@conn, :index) %>
